{
    "name":        "werkint/webapp-bundle",
    "type":        "symfony-bundle",
    "description": "Werkint Webapp bundle",
    "license":     "GPL-3.0+",
    "authors":     [
        {
            "name":  "Bogdan Yurov",
            "email": "bogdan@yurov.me"
        }
    ],
    "require":     {
        "symfony/framework-bundle":      "~2.3",
        "sensio/framework-extra-bundle": "*",
        "symfony/twig-bundle":           "*",
        "twig/twig":                     "~1.14",

        "werkint/phpsass":   "*",
        "werkint/jsmin":     "*",
        "werkint/minifycss": "*",

        "friendsofsymfony/rest-bundle": "0.13.*",
        "ikimea/browser":               "*",

        "php": ">=5.5"
    },
    "autoload":    {
        "psr-4": {
            "Werkint\\Bundle\\WebappBundle\\":        "src/",
            "Werkint\\Bundle\\WebappBundle\\Tests\\": "tests/"
        }
    },
    "extra":       {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    },
    "require-dev": {
        "twig/twig": "*"
    },

    "minimum-stability": "dev"
}